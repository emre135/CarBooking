@model Rental

<h1>Cancel</h1>

<h3>Are you sure you want to cancel this rental?</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteConfirmed" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label class="control-label">Full name</label>
                <input disabled class="form-control" asp-for="CustomerName" />
            </div>
            <div class="form-group">
                <label class="control-label">Car</label>
                <input disabled class="form-control" asp-for="CarModel" />
            </div>
            <div class="form-group">
                <label class="control-label">From</label>
                <input disabled class="form-control" asp-for="From" />
            </div>
            <div class="form-group">
                <label class="control-label">To</label>
                <input disabled class="form-control" asp-for="To" />
            </div>
            <div class="form-group">
                <input class="btn btn-danger" type="submit" value="Delete" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to list of rentals</a>
</div>
