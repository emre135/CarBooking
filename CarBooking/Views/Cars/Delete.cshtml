@model Car

<h1>Delete</h1>

<h3>Are you sure you want to remove this car?</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteConfirmed" method="post">

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label class="control-label">Model</label>
                <input disabled class="form-control" asp-for="Model" />
            </div>

            <div class="form-group">
                <label class="control-label">Year</label>
                <label disabled class="form-control" asp-for="Year" />
            </div>

            <div class="form-group">
                <label class="control-label">Mileage</label>
                <input disabled class="form-control" asp-for="Mileage" />
            </div>
            <div class="form-group">
                <label class="control-label">Price</label>
                <input disabled class="form-control" asp-for="Price" />
            </div>
            <div class="form-group">
                <input class="btn btn-danger" type="submit" value="Delete" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to list of available cars</a>
</div>
