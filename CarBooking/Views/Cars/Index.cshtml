@model IEnumerable<Car>

@{
    ViewData["Title"] = "Emres CarBooking";
}

<h1>List of available cars</h1>

<p>
    <a href="@Url.Action("Create")">
        <img class="plusIcon" src="/images/CarPlusIcon.png" />
    </a>
</p>

<table class="table" style="background-color:white;">
    <thead class="thead-dark">
        <tr>
            <th>Model</th>
            <th>Year</th>
            <th>Mileage</th>
            <th>Price</th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
        <tr>
            <td>@car.Model</td>
            <td>@car.Year</td>
            <td>@car.Mileage</td>
            <td>@car.Price</td>
            <td>
                <a class="" asp-action="Delete" asp-route-id="@car.Id">Delete</a>
                <a asp-action="Edit" asp-route-id="@car.Id">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>
